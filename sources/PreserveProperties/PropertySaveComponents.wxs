<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>

        <ComponentGroup Id="PropertySaveComponents" Directory="INSTALLFOLDER">

            <!--
            ====================================================================================================
            Step 1: Save the value in Windows Registry
            ====================================================================================================
            
            When the installer is run, for any scenario, it will add/update the registry value
            with the current value of the property.
            
            NEXT: Product.wxs
            -->

            <Component>
                <RegistryValue
                    Root="HKLM"
                    Key="SOFTWARE\DustInTheWind\PreserveProperties"
                    Name="RememberMe"
                    Value="[REMEMBER_ME]"
                    Type="string" />
            </Component>
        </ComponentGroup>

    </Fragment>
</Wix>